<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvMyStudioVideoItmRoot"
        android:layout_width="@dimen/dimen_166"
        android:layout_height="@dimen/dimen_166"
        android:layout_marginEnd="@dimen/dimen_8"
        app:cardCornerRadius="@dimen/dimen_corner_4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivHomeMyStudioVideoItmImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvHomeMyStudioVideoItmDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_6"
                android:layout_marginBottom="@dimen/dimen_6"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/ivHomeMyStudioVideoItmImage"
                app:layout_constraintEnd_toEndOf="@id/ivHomeMyStudioVideoItmImage"
                tools:text="00:22" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
