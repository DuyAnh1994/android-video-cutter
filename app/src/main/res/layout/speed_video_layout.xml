    <View
        android:id="@+id/vSpeedVideo0.75X"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:padding="10dp"
        android:background="@drawable/ic_white_un_select_speed"
        app:layout_constraintStart_toStartOf="@id/glSpeedVideoV125"
