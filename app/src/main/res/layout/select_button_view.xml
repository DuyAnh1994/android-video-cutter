<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_40"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dimen_68"
    android:layout_weight="2"
    android:background="@drawable/shape_blue_bg_corner_4"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_2">

    <TextView
        android:id="@+id/tvSelectButtonLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_purple"
        android:fontFamily="@font/font_regular"
        android:gravity="center"
        android:text="@string/cut_video_trim"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvSelectButtonRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/cut_video_cut_out"
        android:textColor="@color/color_gray_60" />

</LinearLayout>
