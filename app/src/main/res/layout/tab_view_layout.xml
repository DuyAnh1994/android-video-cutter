<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dimen_20"
    android:background="@drawable/shape_white_tab_view_bg_purple_tab_view_stroke_corner_right_4">

    <TextView
        android:id="@+id/tvTabViewLeft"
        style="@style/StyleRobotoLightWhite14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_purple_tab_view_bg_corner_left_4"
        android:gravity="center"
        android:padding="@dimen/dimen_6"
        android:text="iTunes" />

    <TextView
        android:id="@+id/tvTabViewRight"
        style="@style/StyleRobotoLightPurple14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_white_tab_view_bg_purple_tab_view_stroke_corner_right_4"
        android:gravity="center"
        android:padding="@dimen/dimen_6"
        android:text="Music Track" />

</LinearLayout>
